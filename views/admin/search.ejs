<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/admin/head.ejs') %>
    <body>
        <%- include('../partials/admin/header.ejs') %>
        <div class="container-fluid">
            <div class="row">
                <%- include('../partials/admin/sidebar.ejs') %>
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <div
                        class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
                    >
                        <h1 class="h2">Search</h1>
                        <div class="btn-toolbar mb-2 mb-md 0">
                            <div class="btn-group me-2">
                                <a href="/logout" class="btn btn-sm btn-outline-dark">Logout</a>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <% if (customers != "") { %>
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Updated At</th>
                                    <th scope="col" class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% customers.forEach(element => { %>
                                <tr class="align-middle">
                                    <td><%= element.name %></td>
                                    <td><%= element.username %></td>
                                    <td><%= element.email %></td>
                                    <td><%= new Date(element.createdAt).toUTCString() %></td>
                                    <td>
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="/admin/view/<%= element._id %>" class="btn btn-primary btn-sm">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            <a href="/admin/edit/<%= element._id %>" class="btn btn-success btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <form action="/admin/edit/<%= element._id %>?_method=DELETE" method="post">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="bi bi-person-x"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>

                        <% } else { %>
                        <h2>No results found</h2>
                        <% } %>
                    </div>
                </main>
            </div>
        </div>

        <%- include('../partials/admin/tail.ejs') %>
    </body>
</html>
