<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/user/head.ejs') %>
    <body>
        <section class="vh-100" style="background-color: #eee">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-12 col-xl-4">
                        <div class="card" style="border-radius: 15px">
                            <div class="card-header" style="position: absolute; top: 0; left: 0">
                                <a href="/edit-profile" class="btn btn-link btn-rounded">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                            <div class="card-body text-center">
                                <h4 class="mb-2">Welcome Back!</h4>
                                <div class="mt-3 mb-4">
                                    <img src="/img/user.webp" class="rounded-circle img-fluid" style="width: 100px" />
                                </div>
                                <h4 class="mb-2"><%= user.name %></h4>
                                <p class="text-muted mb-4">@<%= user.username %></p>
                                <form action="/logout" method="get">
                                    <button type="submit" class="btn btn-primary btn-rounded btn-lg">Logout</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('./partials/user/tail.ejs') %>
    </body>
</html>
